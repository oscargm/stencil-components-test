{
  "compilerOptions": {
    "target": "ES2018",
    "esModuleInterop": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./*"]
    },
    "types": [
      "node",
      "@wdio/sync",
      "@wdio/mocha-framework",
      "@wdio/devtools-service",
      "./types/wdio"
    ]
  },
  "include": [
    "./.eslintrc.js",
    "./src/**/*.ts",
    "./config/**/*.ts",
    "./test/**/*.ts"
  ],
  "exclude": ["./node_modules"]
}
